    <input type="password" class="form-control" name="pw" value="<%= user.userPw %>">
    <label>회원 전화번호</label>
    <input type="text" class="form-control" name="ph" value="<%= user.userPh %>">
    <label>회원 이메일</label>
    <input type="text" class="form-control" name="email" value="<%= user.userEmail %>">
  </div>
  </div>
  <button type="submit" class="btn btn-info" style="margin-top: 30px;">수정</button>
</form>
</div>



