    <%- include('../public/html/wdnav2.html') %>

<div class="subpage-header">
<h3>나의 정보 수정</h3>
</div>

<div class="my-edit">
<div class="my-edit-input">
<form action="/mypage?_method=PUT" method="POST">
  <div class="form-group edit-input">
    <label>회원 이름</label>
    <input type="text" class="form-control edit-input" name="name" value="<%= user.userName  %>" readonly>
    <label>회원 아이디</label>
    <input type="text" class="form-control" name="id" value="<%= user.userId %>" readonly>
