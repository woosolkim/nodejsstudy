<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <link href="/public/main.css" rel="stylesheet">
    <link href="/public/fontawesome/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Gowun+Batang:wght@700&display=swap');
    </style>

    <title>Your Wedding</title>
</head>

<body>

    <%- include('../public/html/wdnav2.html') %>


    <div class="subpage-header">
        <h3>게시판</h3>
        <p class="sub-text">게시판</p>
    </div>



    <div class="tbwrap">

        <table class="innertable">

            <tr class="table-header">

                <td style="width: 100px">글 번호</td>
                <td style="width: 500px">글 제목</td>
                <td style="width: 100px">글 쓴이</td>
                <td style="width: 120px">작성일</td>
                <td style="width: 100px">조회수</td>
                <td style="width: 100px">추천</td>
            </tr>
           
            
            <% for (var i = posts.length - 1; i >= 0; i--){ %>
           
                <tr onclick= "location.href='/boarddetail/<%= posts[i]._id %>' "class="table-text">
                    <td><%= posts[i]._id %></td>
                    <td><%= posts[i].postTitle %> <a style="color: red">[<%= posts[i].postComments %>]</a></td>
                    <td><%= posts[i].writer %></td>
                    <td class="table-day"><%= posts[i].writerDay %> </br> <%= posts[i].writerTime %></td>
                    <td><%= posts[i].postRead %></td>
                    <td><%= posts[i].postRecom %></td>
                </tr>
            
                <% } %>

           
        </table>


        

    </div>

<div class="board-footer">
    <a href="#"> 1</a>
</div>

<div class="board-footbtn">


    <button onclick="location.href='/board/<%= user.userId %>'" class="btn btn-secondary" style="float: left; margin-left:10px;">나의 게시글</button>
    <button onclick="location.href='/board'" class="btn btn-secondary" style="float: left; margin-left:10px;">전체 글</button>
    <a href="/write"><button class="btn btn-blue" class="write-btn" style="float: right; margin-left:10px; margin-right:10px;">글쓰기</button></a>


</div>

<div  style="float: left; width: 100%; text-align: center;">
    <input id="search-input" type="text" style="width: 20%; margin:10px" placeholder="검색">
    <button id="search" class="btn-small btn-dark" type="button">검색</button>
  </div>




  <%- include('../public/html/footer.html') %>







    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

<script>

    $('#search').click(function(){
    var searchText =  $('#search-input').val();
    console.log(searchText);

    window.location.replace('/search?value=' + searchText)
  });
</script>


</body>

</html>